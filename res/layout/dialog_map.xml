<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/zoomview" android:orientation="vertical">

	<com.google.android.maps.MapView
		android:id="@+id/mapview" android:enabled="true" android:textColor="#ff000000"
		android:layout_width="fill_parent" android:layout_height="160dp"
		android:layout_weight="1" android:apiKey="@string/map_key_real" />

	<Button android:id="@+id/buttonRefresh" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="@string/dialog_map_refresh"
		android:textStyle="bold" android:layout_marginTop="8dp"
		android:textSize="14px" />

	<Button android:id="@+id/buttonAnnotate" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="@string/dialog_map_annotate"
		android:textStyle="bold" android:textSize="14px" />

	<Button android:id="@+id/buttonInsertMaplink"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:text="@string/dialog_insertmaplink" android:textStyle="bold"
		android:textSize="14px" />

</LinearLayout>